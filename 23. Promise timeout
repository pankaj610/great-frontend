/**
 * @template T
 * @param {Promise<T>} promise
 * @param {number} duration
 * @return {Promise<T>}
 */
export default function promiseTimeout(promise, duration) {
  return new Promise((resolve, reject)=> {
    setTimeout(()=> {
      reject("Promise timeout")
    }, duration);
    promise.then(val=> {
      resolve(val);
    }).catch((error)=> {
      reject(error);
    });
    
  })
}
